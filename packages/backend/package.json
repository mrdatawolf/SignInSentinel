{
  "name": "@signin-sentinel/backend",
  "version": "0.5.0",
  "private": true,
  "description": "SignInSentinel - Electron backend",
  "author": "Biztech",
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"tsc --watch\" \"electron .\"",
    "start": "electron .",
    "dist": "tsc && electron-builder",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@azure/msal-node": "^2.16.0",
    "@electric-sql/pglite": "^0.2.0",
    "@signin-sentinel/shared": "*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "drizzle-orm": "^0.36.0",
    "exceljs": "^4.4.0",
    "express": "^4.21.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "app-builder-bin": "^5.0.0-alpha.10",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.30.0",
    "electron": "33.4.11",
    "electron-builder": "^26.0.0",
    "typescript": "^5.7.0"
  },
  "build": {
    "appId": "com.biztech.signin-sentinel",
    "productName": "SignInSentinel",
    "directories": {
      "output": "../../release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "!**/*.ts",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "../../.env.example",
        "to": ".env.example"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "asar": true,
    "npmRebuild": true
  }
}
